{
  "manifest_version": 3,
  "name": "ToastKit",
  "version": "0.2.0",
  "description": "Clear cookies, cache, storage, and permissions for the current site. Everything else in your browser stays untouched.",
  "permissions": [
    "browsingData",
    "cookies",
    "contentSettings",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "ToastKit",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/toast16.png",
      "32": "icons/toast32.png",
      "48": "icons/toast48.png",
      "128": "icons/toast128.png"
    }
  },
  "icons": {
    "16": "icons/toast16.png",
    "32": "icons/toast32.png",
    "48": "icons/toast48.png",
    "128": "icons/toast128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "reset-current-site": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Toast current site instantly"
    }
  }
}
